<table class="table">
  <% book_comments.each do |book_comment| %>
    <tr>
      <td>
        <%= link_to (book_comment.user) do %>
        <%= attachment_image_tag(book_comment.user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg") %><br>
        <%= book_comment.user.name %>
        <% end %>
      </td>
      <td>
        <%= book_comment.comment %>
      <td>

      <td>
          <%= link_to "delete", book_book_comments_path(book_comment.id), method: :delete, remote: true, class:'btn btn-sm btn-danger' %>
      </td>
    </tr>
  <% end %>
</table>